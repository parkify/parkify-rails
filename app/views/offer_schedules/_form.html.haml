= form_for @offer_schedule do |f|
  - if @offer_schedule.errors.any?
    #error_explanation
      %h2= "#{pluralize(@offer_schedule.errors.count, "error")} prohibited this offer_schedule from being saved:"
      %ul
        - @offer_schedule.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :resource_offer_id
    = f.number_field :resource_offer_id
  .field
    = f.label :start_date
    = f.datetime_select :start_date
  .field
    = f.label :end_date
    = f.datetime_select :end_date
  .field
    = f.label :recurrance_type
    = f.text_field :recurrance_type
  .field
    = f.label :relative_start
    = f.datetime_select :relative_start
  .field
    = f.label :duration
    = f.text_field :duration
  .field
    = f.label :price_per_hour
    = f.text_field :price_per_hour
  .field
    = f.label :capacity
    = f.text_field :capacity
  .actions
    = f.submit 'Save'
