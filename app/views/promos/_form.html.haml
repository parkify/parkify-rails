= form_for @promo do |f|
  -if @promo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@promo.errors.count, "error")} prohibited this promo from being saved:"
      %ul
        - @promo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :type
    = f.text_area :type
  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .field
    = f.label :value1
    = f.text_field :value1
  .field
    = f.label :value2
    = f.text_field :value2
  .actions
    = f.submit 'Save'
