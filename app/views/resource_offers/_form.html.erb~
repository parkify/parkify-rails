<%= form_for(@resource_offer) do |f| %>
  <% if @resource_offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource_offer.errors.count, "error") %> prohibited this resource_offer from being saved:</h2>

      <ul>
      <% @resource_offer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :location_id %><br />
    <%= f.number_field :location_id %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </div>
  <div class="field">
    <%= f.label :sign_id %><br />
    <%= f.number_field :sign_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
